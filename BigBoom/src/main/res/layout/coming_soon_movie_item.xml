<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?android:colorBackground"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    app:cardCornerRadius="5dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">
    
    
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        
        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/coming_soon_movie_pic"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/header_img"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/coming_soon_movie_name"
                android:textSize="16sp"
                tools:text="十六大开发建设力度看风景"
                android:textColor="?android:textColorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <TextView
                android:id="@+id/coming_soon_movie_type"
                android:textSize="12sp"
                tools:text="类型:绿色的法律框架的"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/coming_soon_movie_directors"
                android:textSize="12sp"
                tools:text="类型:绿色的法律框架的"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <TextView
                android:id="@+id/coming_soon_movie_performer"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                tools:text="主演：三口来到解放螺丝钉发送到丽江发送旅客的费德勒房价松动了房价松动了空间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        
    </LinearLayout>

</android.support.v7.widget.CardView>