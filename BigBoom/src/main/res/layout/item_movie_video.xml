<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_movie_video_img"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="120dp"/>

    <ImageView
        android:id="@+id/playing_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:src="@drawable/item_movie_video_playing_bg"
        android:layout_height="120dp"/>

    <TextView
        android:layout_marginTop="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:maxLines="1"
        android:layout_below="@id/item_movie_video_img"
        android:ellipsize="end"
        android:textColor="@color/material_black60"
        android:id="@+id/item_movie_video_name"
        android:gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>