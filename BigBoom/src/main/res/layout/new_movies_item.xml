<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="?android:colorBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">


        <ImageView
            android:id="@+id/coming_soon_movie_pic"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/header_img"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/new_movies_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/material_amber_300"
                    android:textSize="18sp"
                    tools:text="18"/>

                <TextView
                    android:id="@+id/coming_soon_movie_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/new_movies_rating"
                    android:textColor="@color/material_black"
                    android:textSize="16sp"
                    tools:text="十六大开发建设力度看风景sdfsdfsdfsdfsdfdsfsdf"/>

                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/ratingBar_hots"
                    style="?android:attr/ratingBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@id/coming_soon_movie_name"
                    android:layout_marginTop="3dp"
                    android:isIndicator="true"
                    android:max="10"
                    android:numStars="5"
                    android:progressDrawable="@drawable/rating_bar_bg"
                    android:rating="1"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/coming_soon_movie_type"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="12sp"
                tools:text="类型:绿色的法律框架的"/>

            <TextView
                android:id="@+id/coming_soon_movie_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="12sp"
                tools:text="类型:绿色的法律框架的"/>

            <TextView
                android:id="@+id/coming_soon_movie_directors"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="12sp"
                tools:text="类型:绿色的法律框架的"/>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>